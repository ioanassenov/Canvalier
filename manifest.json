{
  "manifest_version": 3,
  "name": "Canvalier",
  "version": "1.0.0",
  "description": "Supercharge your Canvas dashboard!",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.instructure.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Canvalier"
  },
  "content_scripts": [
    {
      "matches": ["https://*.instructure.com/*"],
      "js": ["content.js"],
      "css": ["styles.css", "dark-mode.css"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png", "modules/*.js"],
      "matches": ["https://*.instructure.com/*"]
    }
  ],
  "browser_specific_settings": {
      "gecko": {
          "id": "@canvalier",
          "strict_min_version": "58.0",
          "data_collection_permissions": {
              "required": ["none"]
          }
      }
  }
}
