{
  "manifest_version": 3,
  "name": "Canvalier",
  "version": "1.0.0",
  "description": "Supercharge your Canvas dashboard!",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.instructure.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.instructure.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["https://*.instructure.com/*"]
    }
  ]
}
